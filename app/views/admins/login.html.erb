<div class="login">
    <h1>Login</h1>
    <%= form_tag '/admin' do %>
    <%= label_tag :username%>
    <%= text_field_tag :username,nil, :required => true%>
    <br/>
    <br/>
    <%= label_tag :password%>
    <%= password_field_tag :password,nil, :required => true%>
    <br/>
    <br/>
    <div class="login_button_container">
        <%= submit_tag "Login", :class => 'login_button'%>
    </div>
    <%end%>
</div>